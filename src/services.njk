---
title: Services
layout: "base.njk"
---
    <section id="services" class="services section-bg" style="margin-top: 100px;">
        <div class="container">
            <div class="section-title"></div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-pause="false" id="carousel-1">
                                <div class="carousel-inner">
                                    <div class="carousel-item active"><img class="w-100 d-block" src="/assets/img/pexels-fauxels-3183197.jpg" alt="Slide Image"></div>
                                    <div class="carousel-item"><img class="w-100 d-block" src="/assets/img/pexels-fauxels-3184649.jpg" alt="Slide Image"></div>
                                    <div class="carousel-item"><img class="w-100 d-block" src="/assets/img/pexels-mart-production-7230355.jpg" alt="Slide Image"></div>
                                </div>
                                <div><a class="carousel-control-prev" href="#carousel-1" role="button" data-bs-slide="prev"><span class="visually-hidden">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-bs-slide="next"><span class="visually-hidden">Next</span></a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card" style="margin-top: 20px;">
                        <div class="card-body">
                            <h2>{{services.intro.title}}</h2>
                            <p>{{services.intro.description}}<br></p>
                        </div>
                    </div>
                    <div class="card" style="margin-top: 20px;">
                        <div class="card-body">
                            <div class="accordion" role="tablist" id="accordion-2">
                                <div class="accordion-item" id="quality">
                                    <h2 class="accordion-header" role="tab"><button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#accordion-2 .item-1" aria-expanded="false" aria-controls="accordion-2 .item-1"><br><strong> {{services.list.service1}}</strong><br><a href="#quality" data-bs-toggle="collapse" data-bs-target="#accordion-2 .item-1"></a></button></h2>
                                    <div class="accordion-collapse collapse item-1" role="tabpanel" data-bs-parent="#accordion-2">
                                        <div class="accordion-body">
                                        {{services.list.service1_desc}}
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item" id="lab">
                                    <h2 class="accordion-header" role="tab"><button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#accordion-2 .item-2" aria-expanded="false" aria-controls="accordion-2 .item-2"><strong>{{services.list.service2}}</strong><br></button></h2>
                                    <div class="accordion-collapse collapse item-2" role="tabpanel" data-bs-parent="#accordion-2">
                                        <div class="accordion-body">
                                        {{services.list.service2_desc}}
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item" id="physician">
                                    <h2 class="accordion-header" role="tab"><button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#accordion-2 .item-3" aria-expanded="false" aria-controls="accordion-2 .item-3"><strong>{{services.list.service3}}</strong></button></h2>
                                    <div class="accordion-collapse collapse item-3" role="tabpanel" data-bs-parent="#accordion-2">
                                        <div class="accordion-body">
                                        {{services.list.service3_desc}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="accordion"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>